<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Add a booking for <%= @supply.title %></h1>
      <%= simple_form_for [@supply, @booking] do |f| %>
        <%= f.input :start_date %>
        <%= f.input :end_date %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
<%= link_to "Cancel", supply_path(@supply) %>